@model TransactionsData.Models.MerchantTerminals
@{
    ViewData["Title"] = "Merchant Terminal";
}

<h1>Merchant Terminal</h1>
<div class="container jumbotron">
    @using (Html.BeginForm("CreateTerminal", "Merchant", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, true, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="col-md-12">
            <div class="form-group row control-label">
                <div class="col">
                    Terminal ID:
                    @Html.EditorFor(model => model.TerminalId, new { htmlAttributes = new { @class = "form-control", name = "mid", @id = "ProductName" } })
                    <div hidden>@Html.EditorFor(model => model.MerchantID, new { htmlAttributes = new { @class = "form-control", @id = "ID", @Value = @ViewData["mid"] } })</div>
                </div>
                <div class="col">
                    IP Address:
                    @Html.EditorFor(model => model.IpAddress, new { htmlAttributes = new { @class = "form-control", @id = "ProductCode" } })
                </div>
                <div class="form-group row control-label">
                    <div class="col float-left col-md-8">
                        <input type="submit" value="Save" class="btn btn-primary" id="btnSearch" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>
